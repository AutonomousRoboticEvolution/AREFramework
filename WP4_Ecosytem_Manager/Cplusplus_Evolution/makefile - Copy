CXX = gcc

CFLAGS = -I../include -Wall -fPIC -static -std=c++1y
LDFLAGS = -shared

OS = $(shell uname -s)
ifeq ($(OS), Linux)
	CFLAGS += -D__Linux
	EXT = so
else 
	CFLAGS += -D__APPLE__
	EXT = dylib
endif

all:
